@require './config'

.button {
  color: #ffffff !important; 
  text-decoration: none;
  background-color: #4d1c87;
  padding: 0.5rem 1rem 0.5rem 1rem;
  border-radius: 0.5rem;
  margin-left: 1rem;
}

.button-disabled {
  color: #ffffff !important; 
  text-decoration: none;
  background-color: #32936f;
  padding: 0.5rem 1rem 0.5rem 1rem;
  border-radius: 0.5rem;
  margin-left: 1rem;
}

.action-button {
  background-color: #4d1c87 !important;
  margin-left: 1rem !important;
  border-color: #fff !important;
  width: 100%;
   min-width: 50px;
   max-width: 300px;
}

.features {
  text-align: center !important;
}

.split-div {
  border-top 1px solid $borderColor
  padding 1.2rem 0
  margin-top 2.5rem
  display flex
  flex-wrap wrap
  align-items flex-start
  align-content stretch
  justify-content space-between
}

.each-div {
  flex-grow 1
  flex-basis 45%
  max-width 45%
  margin-left 0.25rem
}

code {
  word-wrap: break-word !important;
  overflow-x: hidden !important;
  font-size: 75%;
}

.footer-cncf {
  background-color: #fff;
  border-top 1px solid $borderColor;
  text-align: center;

  h4 {
    text-transform: uppercase;
    font-size: 1.1875rem;
    margin-top: 0;
    padding-top: 0;
  }

  img {
    margin: 0 auto;
    max-width: 400px;
  }
  a {
    font-weight: bold;
    color: #4d4d4d;
  }
  a:hover {
    text-decoration: underline;
  }

}

span.copyright {
  text-align: left !important;
  color: lighten(#000, 45);
  width: 75%; 
  float: left;
  a {
    font-weight: bold;
    color: #4d4d4d;
  }

  a:hover {
    text-decoration: underline;
  }
  }

span.footer-links {
  text-align: right !important;
  img-align: right !important;
 width: 25%; 
 float: right;
}


.brand-logo {
  border-top 1px solid $borderColor;
  border-bottom 1px solid $borderColor;
  border-left 1px solid $borderColor;
  border-right 1px solid $borderColor;
  width: 50%;
}

td {
  vertical-align: top !important;
  padding-left: 1rem;
  padding-right: 1rem;
  padding-top: 1rem;
  padding-bottom: 1rem; 
}

.img-with-border {
  border-top 1px solid $borderColor;
  border-bottom 1px solid $borderColor;
  border-left 1px solid $borderColor;
  border-right 1px solid $borderColor;
}

.logo {
  vertical-align: top;
}

